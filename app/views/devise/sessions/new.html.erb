<div class="flex flex-col w-full items-center">
  <%= image_tag 'pokemon_logo' %>
  <h2 class="form-title">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'w-full md:w-96 flex flex-col gap-4' }) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'form-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: 'form-checkbox' %>
        <%= f.label :remember_me, class: 'text-gray-800 text-sm' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Login", class: 'form-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
