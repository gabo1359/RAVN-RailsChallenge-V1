<div class="flex flex-col w-full items-center">
  <%= image_tag 'pokemon_logo' %>
  <h2 class="form-title">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'w-full md:w-96 flex flex-col gap-4'  }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'form-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
