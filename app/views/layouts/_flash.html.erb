<% flash.each do |flash_type, message| %>
  <div
    data-controller="flash"
    class="flex items-center gap-2 absolute top-6 left-6 px-4 py-2 border border-solid rounded-md <%= flash_classes_for(flash_type) %>"
  >
    <div class="w-4 h-4">
      <%= show_svg "#{flash_type}.svg" %>
    </div>
    <p><%= message %></p>
  </div>
<% end %>
