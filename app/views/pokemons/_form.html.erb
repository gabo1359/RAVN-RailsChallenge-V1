  <%= form_for(@pokemon, html: { class: "w-full md:w-2/3 flex flex-col gap-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: @pokemon %>

    <div class="flex flex-col md:flex-row gap-4">
      <div class="field w-full md:w-1/2">
        <%= f.label :name, class: "form-label" %><br>
        <%= f.text_field :name, autofocus: true, class: "form-input" %>
      </div>

      <div class="field w-full md:w-1/2">
        <%= f.label :main_technique, class: "form-label" %><br>
        <%= f.text_field :main_technique, class: "form-input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :image, class: "form-label" %><br>
      <%= f.file_field :image, class: "form-input p-[3px]" %>
    </div>

    <div class="flex flex-row gap-4">
      <div class="field w-1/2">
        <%= f.label :country, class: "form-label" %><br>
        <%= f.select :country, countries_for_select, { include_blank: true }, class: "form-input" %>
      </div>

      <div class="field w-1/2">
        <%= f.label :pokemon_type, class: "form-label" %><br>
        <%= f.select :pokemon_type, pokemon_types_for_select, {}, class: "form-input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :description, class: "form-label" %><br>
      <%= f.text_area :description, class: "form-input h-24" %>
    </div>

    <div class="actions">
      <%= f.submit @pokemon.new_record? ? t("pokemons.create") : t("pokemons.update"), class: "form-button" %>
    </div>
  <% end %>
