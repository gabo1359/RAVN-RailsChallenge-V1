<div class="border border-gray-300 rounded-lg p-4 flex items-center">
  <p class="w-[30%] lg:w-1/5 text-sm text-gray-500"><%= l(pokemon.created_at) %></p>
  <%= link_to pokemon_path(pokemon.id), class: "w-[30%] text-purple-700 hover:underline" do %>
    <p><%= pokemon.name.capitalize %></p>
  <% end %>
  <div class="w-1/5">
    <p class="table-badge <%= badge_classes_for(pokemon.pokemon_type) %>"><%= pokemon.pokemon_type %></p>
  </div>
  <div class="flex items-center w-1/5 lg:w-[30%]">
    <%= link_to edit_pokemon_path(pokemon.id), class: "table-button text-yellow-700" do %>
      <div class="w-4 h-4">
        <%= show_svg "edit" %>
      </div>
      <p class="hidden lg:block"><%= t("shared.edit") %></p>
    <% end %>
    <%= link_to pokemon_path(pokemon.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "table-button text-red-500" do %>
      <div class="w-4 h-4">
        <%= show_svg "delete" %>
      </div>
      <p class="hidden lg:block"><%= t("shared.delete") %></p>
    <% end %>
  </div>
</div>
